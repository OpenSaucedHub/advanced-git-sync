{
  "name": "@opensaucedhub/git-sync",
  "description": "Synchronize GitHub repository with GitLab including branches, PRs, and issues",
  "version": "1.4.7",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "bun sync-deps && bun f && echo 'âœ… Source-only action ready - no bundling needed'",
    "lint": "eslint src/**/*.ts",
    "f": "prettier --write \"**/*.*\"",
    "prepare": "husky",
    "s": "bun src/index.ts",
    "sync-deps": "bun scripts/sync-action-deps.js",
    "dev:setup": "bun scripts/local-test.js",
    "dev:sync": "bun run dev:setup && bun s",
    "dev:config": "echo 'Edit sync-config.local.yml or .github/sync-config.yml for configuration'"
  },
  "keywords": [
    "github",
    "actions",
    "gitlab",
    "automation",
    "git"
  ],
  "author": "vikshan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenSaucedHub/advanced-git-sync.git"
  },
  "bugs": {
    "url": "https://github.com/OpenSaucedHub/advanced-git-sync/issues"
  },
  "homepage": "https://github.com/OpenSaucedHub/advanced-git-sync#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@gitbeaker/rest": "^43.5.0",
    "@octokit/rest": "^22.0.0",
    "deepmerge": "^4.3.1",
    "js-yaml": "^4.1.0",
    "rimraf": "^6.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@semantic-release/npm": "^13.0.0",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vercel/ncc": "^0.38.4",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "conventional-changelog-gitmoji": "^0.2.5",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.9",
    "semantic-release-gitmoji": "^1.6.8",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "eslint.config.mjs"
    ],
    "rules": {
      "@typescript-eslint/no-require-imports": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "error"
    }
  }
}
